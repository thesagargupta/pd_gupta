# Firestore Security Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read access for all collections
    match /{document=**} {
      allow read: if true;
    }
    
    // Site content - admin write only
    match /siteContent/{doc} {
      allow write: if request.auth != null && 
        request.auth.token.email == "admin@sharmaassociates.in";
    }
    
    // Blog posts - admin write only
    match /blogs/{doc} {
      allow write: if request.auth != null && 
        request.auth.token.email == "admin@sharmaassociates.in";
    }
    
    // Contact form - public create, admin update/delete
    match /contacts/{doc} {
      allow create: if true;
      allow update, delete: if request.auth != null && 
        request.auth.token.email == "admin@sharmaassociates.in";
    }
  }
}
